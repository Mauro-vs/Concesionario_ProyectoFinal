<Window x:Class="Concesionario.ViewWPF.ClientesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Concesionario.ViewWPF"
        mc:Ignorable="d"
        Title="Gestión de Clientes" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2D2D30">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnVolver" 
                        Grid.Column="0"
                        Content="🡠  VOLVER" 
                        Background="Transparent" 
                        Foreground="#FFABCFE2" 
                        FontSize="14" 
                        FontWeight="Bold" 
                        BorderThickness="0" 
                        Cursor="Hand"
                        Click="btnVolver_Click"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="CARTERA DE" Foreground="White" FontSize="24" Margin="0,0,8,0"/>
                    <TextBlock Text="CLIENTES" Foreground="#FFABCFE2" FontWeight="Bold" FontSize="24"/>
                </StackPanel>

                <Button x:Name="btnImprimir"
                        Grid.Column="2"
                        Content="🖨 INFORMES" 
                        Background="#0078D7" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="12"
                        Height="35" 
                        Padding="15,0"
                        BorderThickness="0" 
                        Cursor="Hand"
                        Click="btnImprimir_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="30">

            <Border Background="White" CornerRadius="5" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Color="#CCC" Opacity="0.5" ShadowDepth="5"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F9F9F9" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="0,0,0,20" CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtIdCliente" Visibility="Collapsed"/>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="DNI / NIF" Foreground="Gray" FontSize="11"/>
                                <TextBox x:Name="txtDni" Height="25"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Nombre" Foreground="Gray" FontSize="11"/>
                                <TextBox x:Name="txtNombre" Height="25"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <TextBlock Text="Apellidos" Foreground="Gray" FontSize="11"/>
                                <TextBox x:Name="txtApellidos" Height="25"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Margin="0,0,10,0">
                                <TextBlock Text="Teléfono" Foreground="Gray" FontSize="11"/>
                                <TextBox x:Name="txtTelefono" Height="25"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4" Margin="0,0,10,0">
                                <TextBlock Text="Email" Foreground="Gray" FontSize="11"/>
                                <TextBox x:Name="txtEmail" Height="25"/>
                            </StackPanel>

                            <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Bottom">

                                <Button x:Name="btnLimpiar"
                                        Content="NUEVO" 
                                        Background="#EEE" 
                                        Foreground="Black" 
                                        FontWeight="Bold" 
                                        Height="25" Width="60" 
                                        Margin="0,0,5,0"
                                        ToolTip="Limpiar formulario"
                                        Click="btnLimpiar_Click"/>

                                <Button x:Name="btnGuardar"
                                        Content="GUARDAR" 
                                        Background="#2D2D30" 
                                        Foreground="#FFABCFE2" 
                                        FontWeight="Bold" 
                                        Height="25" Width="80" 
                                        Margin="0,0,5,0"
                                        Click="btnGuardar_Click"/>

                                <Button x:Name="btnEliminar"
                                        Content="ELIMINAR" 
                                        Background="#FFEBEE" 
                                        Foreground="Red" 
                                        BorderBrush="Red"
                                        BorderThickness="1"
                                        FontWeight="Bold" 
                                        Height="25" Width="70" 
                                        Click="btnEliminar_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <DataGrid x:Name="dgClientes"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              RowHeight="50"
                              SelectionMode="Single"
                              SelectionChanged="dgClientes_SelectionChanged"
                              AlternatingRowBackground="#F0F0F0"
                              BorderThickness="1"
                              BorderBrush="#DDDDDD"
                              FontSize="14">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D30"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="DNI" Binding="{Binding dni}" Width="100" FontWeight="Bold"/>
                            <DataGridTextColumn Header="NOMBRE" Binding="{Binding nombre}" Width="150"/>
                            <DataGridTextColumn Header="APELLIDOS" Binding="{Binding apellidos}" Width="200"/>
                            <DataGridTextColumn Header="TELÉFONO" Binding="{Binding telefono}" Width="120"/>
                            <DataGridTextColumn Header="EMAIL" Binding="{Binding email}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="2" Text="Selecciona un cliente para editar o eliminar." VerticalAlignment="Bottom" Foreground="Gray"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>